@model MOBILUX.ViewModels.LoginVM
@{
    ViewData["Title"] = "DangNhap";
}

<style>
    .auth-wrapper {
        min-height: calc(80vh - 160px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-custom {
        width: 100%;
        max-width: 1500px;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .img-left {
        object-fit: cover;
        height: 100%;
        min-height: 420px;
    }

    .form-control {
        padding: 10px 12px;
    }
</style>

<div class="container auth-wrapper">
    <div class="card card-custom">
        <div class="row g-0">
            <!-- Ảnh bên trái -->
            <div class="col-md-6 d-none d-md-block">
                <img src="/images/Phone/anhnen2.jpg" class="w-100 h-100 img-left" alt="Watch Image" style="height: 150px; width: 550px;" />
            </div>

            <!-- Form bên phải -->
            <div class="col-md-6 bg-white p-5">
                <div class="mx-auto" style="max-width: 500px;">
                    <div class="text-center">
                        <h1 class="mb-4">
                            <span style="color: orange;">M</span><span style="color: gray;">OBILUX</span>
                        </h1>
                        <h1 class="mb-5">
                            <span style="color: black;">========================</span>
                        </h1>
                        
                    </div>

                    <form asp-action="DangNhap" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>

                        <div class="form-group mb-3">
                            <input asp-for="UserName" class="form-control" placeholder="Mã đăng nhập hoặc số điện thoại" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-warning w-100">Đăng nhập</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

