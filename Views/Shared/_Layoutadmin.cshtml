﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- Navbar -->
    <!-- Navbar -->

    <nav class="navbar navbar-dark bg-dark px-3" style="height: 70px;">
        <div class="container-fluid d-flex ">

            <span class="navbar-brand mb-0 h1"> Admin</span>

            <span class="text-white">Chào Mừng @Context.User.Identity.Name,<a asp-Controller="Login" asp-action="DangXuat" class="text-white"><small class="text-white mx-2">Đăng Xuất</small></a></span>


        </div>
    </nav>

    <!-- Full height layout with sidebar + content -->
    <div class="container-fluid">
        <div class="row" style="height: calc(100vh - 70px);">
            <!-- 56px là chiều cao mặc định của navbar -->
            <!-- Sidebar -->
            <div class="col-md-2 bg-dark text-white d-flex flex-column overflow-auto">
                <ul class="nav flex-column pt-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Quản lí sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white"  asp-controller="Admin" asp-action="DanhMuc">Quản lí danh mục</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="QuanLyDH">Quản lí đơn hàng</a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 overflow-auto p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>