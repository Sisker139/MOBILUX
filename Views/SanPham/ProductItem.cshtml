 @model MOBILUX.ViewModels.PaginatedSanPhamVM
<h2 class="title text-center">Sản Phẩm</h2>
@foreach (var item in Model.SanPhams)
{
	<div class="col-sm-4">
		<div class="product-image-wrapper">
			<div class="single-products">
				<div class="productinfo text-center">
					<a asp-action="Detail" asp-controller="SanPham" asp-route-id="@item.MaSp">
						<img src="~/images/Phone/@item.Hinh" alt="" />
					</a>
					<a asp-action="Detail" asp-controller="SanPham" asp-route-id="@item.MaSp">
						<h2>@item.TenSp</h2>
					</a>
					
					<p>@item.DonGia.ToString("#,##0") VND</p>
					<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
				</div>
				<div class="product-overlay">
					<div class="overlay-content">
						<a asp-action="Detail" asp-controller="SanPham" asp-route-id="@item.MaSp">
							<h2>@item.DonGia.ToString("#,##0") VND</h2>
						</a>
						<a asp-action="Detail" asp-controller="SanPham" asp-route-id="@item.MaSp">
							<p>@item.TenSp</p>
						</a>
						
							<a asp-action="AddToCart" asp-Controller="Cart" asp-route-id="@item.MaSp" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
					</div>
				</div>
			</div>
		</div>
	</div>
}