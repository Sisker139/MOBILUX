@model IEnumerable<MOBILUX.ViewModels.DanhMucVM>
@{
    Layout = "_Layoutadmin";
}
<h2>Danh sách Danh Mục</h2>

<a asp-action="ThemDanhMuc" class="btn btn-primary mb-3">+ Thêm Danh Mục</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã Danh Mục</th>
            <th>Tên Danh Mục</th>
            <th>Số Lượng Sản Phẩm</th>
            <th>Trạng Thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDanhMuc</td>
                <td>@item.TenDanhMuc</td>
                <td>@item.SoLuong</td>
                <td>@item.TrangThai</td>
                <td>
                    <a asp-action="EditDanhMuc" asp-route-id="@item.MaDanhMuc" class="btn btn-warning">Sửa</a>

                    @if (item.TrangThai == "Hoạt động")
                    {
                        <form asp-action="ToggleDanhMucStatus" asp-route-id="@item.MaDanhMuc" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Ẩn</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ToggleDanhMucStatus" asp-route-id="@item.MaDanhMuc" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success">Hiện</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
