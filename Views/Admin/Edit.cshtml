@model MOBILUX.ViewModels.ThemSanPhamVM

@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "_Layoutadmin";
}

<h2>Sửa sản phẩm</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="TenSP"></label>
        <input asp-for="TenSP" class="form-control" />
        <span asp-validation-for="TenSP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaDanhMuc"></label>
        <select asp-for="MaDanhMuc" class="form-control" asp-items="@(new SelectList(Model.ListDM, "MaDanhMuc", "TenDanhMuc", Model.MaDanhMuc))">
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GiamGia"></label>
        <input asp-for="GiamGia" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DungLuong"></label>
        <input asp-for="DungLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TrongLuong"></label>
        <input asp-for="TrongLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Pin"></label>
        <input asp-for="Pin" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <input asp-for="TrangThai" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MoTaNgan">Mô tả ngắn</label>
        <textarea asp-for="MoTaNgan" class="form-control" rows="2"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="MoTa">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label>Hình hiện tại:</label><br />
        @if (!string.IsNullOrEmpty(Model.Hinh))
        {
            <img src="~/images/Phone/@Model.Hinh" width="150" class="img-thumbnail" />
        }
    </div>

    <div class="form-group">
        <label>Hình mới (nếu muốn đổi):</label>
        <input type="file" name="HinhMoi" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
