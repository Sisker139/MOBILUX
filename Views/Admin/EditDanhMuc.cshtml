@model MOBILUX.Data.DanhMuc

@{
    Layout = "_Layoutadmin";
}

<h2>Sửa Danh Mục</h2>

<form asp-action="EditDanhMuc" method="post">
    <input type="hidden" asp-for="MaDanhMuc" />
    <div class="form-group">
        <label asp-for="TenDanhMuc"></label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success me-2">Lưu thay đổi</button>
        <a asp-action="DanhMuc" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
