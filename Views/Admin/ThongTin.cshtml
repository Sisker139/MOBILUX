@model MOBILUX.Data.NhanVien
@{
    ViewBag.Title = "Thông Tin Cá Nhân";
}

<style>
    .info-form-wrapper {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

        .info-form-wrapper h3 {
            margin-bottom: 30px;
            font-weight: bold;
        }

    .form-group label {
        font-weight: 500;
    }

    .btn-toggle-password {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }
</style>

<div class="container">
    <div class="info-form-wrapper">
        <h3 class="text-center"><i class="fa fa-user"></i> Thông Tin Cá Nhân</h3>

        <form asp-action="CapNhatThongTin" method="post">
            <div class="form-group">
                <label>Họ Tên</label>
                <input asp-for="TenNv" class="form-control" />
            </div>


            <div class="form-group">
                <label>Mật Khẩu</label>
                <div class="input-group">
                    <input asp-for="MatKhau" class="form-control" type="password" id="passwordField" value="@Model.MatKhau" />
                    <div class="input-group-append">
                        <button class="btn btn-secondary btn-toggle-password" type="button" onclick="togglePassword()">Hiện</button>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-4">Cập Nhật</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const pwd = document.getElementById("passwordField");
            const btn = pwd.nextElementSibling.querySelector("button");

            if (pwd.type === "password") {
                pwd.type = "text";
                btn.innerText = "Ẩn";
            } else {
                pwd.type = "password";
                btn.innerText = "Hiện";
            }
        }
    </script>
}
