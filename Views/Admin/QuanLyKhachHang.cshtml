@model IEnumerable<MOBILUX.Data.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_Layoutadmin";
}

@if (TempData["Message"] != null)
{
    <div id="alertMessage" class="alert alert-success">
        @TempData["Message"]
    </div>
}

<h2>Quản lý khách hàng</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Mã KH</th>
            <th>Họ tên</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kh in Model)
        {
            <tr>
                <td>@kh.MaKh</td>
                <td>@kh.HoTenKh</td>
                <td>@kh.Sdt</td>
                <td>@kh.Email</td>
                <td>@kh.DiaChi</td>
                <td>
                    <form asp-action="ResetPassword" asp-route-id="@kh.MaKh" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bạn có chắc muốn đặt lại mật khẩu?')">Reset</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        setTimeout(function () {
            var alertBox = document.getElementById('alertMessage');
            if (alertBox) {
                alertBox.style.transition = "opacity 0.5s ease-out";
                alertBox.style.opacity = 0;
                setTimeout(() => alertBox.style.display = 'none', 500);
            }
        }, 3000); // 10 giây
    </script>
}
