@model MOBILUX.Data.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_Layoutadmin";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Chi tiết sản phẩm - @Model.TenSp</h3>
        </div>
        <div class="card-body row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.Hinh))
                {
                    <img src="~/images/Phone/@Model.Hinh" class="img-fluid rounded" style="max-height: 300px;" />
                }
                else
                {
                    <p><em>Không có hình ảnh</em></p>
                }
            </div>
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <th>Danh mục:</th>
                        <td>@Model.MaDanhMucNavigation?.TenDanhMuc</td>
                    </tr>
                    <tr>
                        <th>Giá:</th>
                        <td>@(Model.Gia?.ToString("N0") ?? "0") VND</td>
                    </tr>
                    <tr>
                        <th>Giảm giá:</th>
                        <td>@(Model.GiamGia?.ToString("N0") ?? "0") VND</td>
                    </tr>
                    <tr>
                        <th>Số lượng:</th>
                        <td>@Model.SoLuong</td>
                    </tr>
                    <tr>
                        <th>Dung lượng:</th>
                        <td>@Model.DungLuong</td>
                    </tr>
                    <tr>
                        <th>Trọng lượng:</th>
                        <td>@Model.TrongLuong</td>
                    </tr>
                    <tr>
                        <th>Pin:</th>
                        <td>@Model.Pin</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>@Model.TrangThai</td>
                    </tr>
                    <tr>
                        <th>Mô tả ngắn:</th>
                        <td>@Model.MoTaNgan</td>
                    </tr>
                    <tr>
                        <th>Mô tả:</th>
                        <td>@Model.MoTa</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>
